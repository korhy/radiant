# Docker environment configuration
# Copy this to .env.local for Docker development

# PostgreSQL Database Configuration
POSTGRES_VERSION=16
POSTGRES_DB=radiant_db
POSTGRES_USER=radiant_user
POSTGRES_PASSWORD=radiant_password

# Symfony Configuration
APP_ENV=dev
APP_DEBUG=1

# Database URL for Symfony (used by Doctrine)
DATABASE_URL="postgresql://radiant_user:radiant_password@database:5432/radiant_db?serverVersion=16&charset=utf8"

# Mailer Configuration (using Mailpit for development)
MAILER_DSN=smtp://mailer:1025

# Redis Configuration (optional)
REDIS_URL=redis://redis:6379

# Messenger Configuration (can use Redis if available)
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0

# Optional: Blackfire configuration for profiling
# BLACKFIRE_SERVER_ID=your-server-id
# BLACKFIRE_SERVER_TOKEN=your-server-token
